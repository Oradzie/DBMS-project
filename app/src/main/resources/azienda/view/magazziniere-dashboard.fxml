<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" spacing="20.0" stylesheets="@style.css">
    <VBox alignment="TOP_CENTER" spacing="10.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="DASHBOARD MAGAZZINIERE" styleClass="header-label"/>

        <GridPane hgap="10.0" vgap="10.0">
            <Button text="Eliminazione Prodotto" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#toggleEliminazioneProdotto"/>
            <Button text="Aggiungi prodotto" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#toggleInserimentoProdotto"/>
            <Button text="Visualizza quantita prodotto" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#toggleVisualizzaQuantita"/>
        </GridPane>
    </VBox>

    <Pane fx:id="rightPaneMag"/>
</HBox>

