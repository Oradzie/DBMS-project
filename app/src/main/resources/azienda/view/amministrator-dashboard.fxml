<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" spacing="20.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="TOP_LEFT" spacing="10.0">
        <Label text="DASHBOARD AMMINISTRATORE" styleClass="header-label" style="-fx-text-fill: #8B0000; -fx-font-weight: bold; -fx-font-size: 24px;"/>

        <GridPane hgap="10.0" vgap="10.0">
            <Button text="Inserimento Magazziniere" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#toggleInserimentoMagazziniere"/>
            <Button text="Categoria piÃ¹ Venduta" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#toggleCategoriaVenduta"/>
            <Button text="Statistiche Magazzinieri" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#toggleStatisticheMagazzinieri"/>
            <Button text="Andamento Vendite"  GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#toggleSalesChertPane"/>
            <Button text="Istogramma Vendite"  GridPane.rowIndex="4" GridPane.columnIndex="0" onAction="#toggleIstogrammaChartPane"/>
            <Button text="Richiesta rifornimento"  GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Button text="Visualizzazione dati magazzinieri" GridPane.rowIndex="6" GridPane.columnIndex="0" onAction="#toggleDatiMagazzinieri"/>
        </GridPane>
    </VBox>

    <Pane fx:id="rightPane">
        <!-- Contenitore per il form di inserimento -->
        <fx:include fx:id="inserimentoMagazzinierePane" source="inserimentoMagazziniere.fxml"/>

        <fx:include fx:id="categoriaPiuVendutaPane" source="categoria-piu-venduta.fxml"/>

        <fx:include fx:id="andamentoVenditePane" source="andamento-vendite.fxml"/>

        <fx:include fx:id="statisticheMagazzinieriPane" source="visualizzaStatistichemagazzinieri.fxml"/>

        <fx:include fx:id="istogrammaVenditePane" source="istogramma-vendite.fxml"/>

        <fx:include fx:id="visualizzaDatiMagazzinieriPane" source="visualizzaDatiMagazzinieri.fxml"/>
    </Pane>
</HBox>

