<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="50.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="azienda.controller.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" text="BENVENUTO IN AZIENDA" styleClass="header-label"/>
    <VBox alignment="CENTER" spacing="5.0">
        <TextField fx:id="usernameField" promptText="Email" focusTraversable="false" maxWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Password" focusTraversable="false" maxWidth="200"/>
    </VBox>
    <Button fx:id="loginButton" mnemonicParsing="false" text="Login" onAction="#login"/>

</VBox>