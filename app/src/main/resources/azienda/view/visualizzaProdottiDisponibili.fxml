<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="azienda.controller.ProdDispController" visible="false" disable="true" spacing="10.0" alignment="CENTER">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Prodotti disponibili" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableView" prefWidth="800">
        <columns>
            <TableColumn fx:id="nomeProdotto" text="Nome Prodotto" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="nomeProdotto"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="specifiche" text="Specifiche" prefWidth="350">
                <cellValueFactory>
                    <PropertyValueFactory property="specifiche"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="disponibilita" text="DisponibilitÃ " prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="disponibilita"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="codiceProdotto" text="Codice Prodotto" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="codiceProdotto"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Button text="Carica Prodotti" onAction="#loadProducts"/>
</VBox>
