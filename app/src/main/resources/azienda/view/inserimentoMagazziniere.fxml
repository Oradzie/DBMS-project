<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" fx:id="formPane" alignment="TOP_CENTER" visible="false">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Inserimento Magazziniere" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Codice Dipendente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="codiceDipendente" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Codice Fiscale:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="codiceFiscale" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Nome:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="nome" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Cognome:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="cognome" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Telefono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="telefono" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Salva" onAction="#handleSave"/>
</GridPane>
