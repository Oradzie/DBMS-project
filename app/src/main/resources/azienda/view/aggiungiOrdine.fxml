<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="azienda.controller.AggiungiOrdineController" spacing="10.0" alignment="TOP_CENTER" visible="false" disable="true">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Nuovo Ordine" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Indirizzo Destinatario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="indirizzoDestinatario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Codice Sconto, inserisci '0' se non ne hai:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>    
        <TextField fx:id="codiceSconto" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Codice Promo, inserisci '0' se non ne hai:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="codicePromo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        </GridPane>

    <Button text="Aggiungi Dati e Inizia Ordine" onAction="#toggleConfermaOrdine"/>
     <!-- Contenitore per il form di inserimento -->
    <fx:include fx:id="aggiungiAlCarrelloPane" source="iniziaOrdine.fxml"/>
</VBox>