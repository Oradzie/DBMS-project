<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="azienda.controller.VisualizzaStoricoOrdiniController" spacing="10.0" alignment="CENTER" stylesheets="@style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Storico Ordini" styleClass="entry-label"/>
    <TableView fx:id="storicoOrdiniTable" prefWidth="800" prefHeight="600">
        <columns>
            <TableColumn fx:id="codiceOrdineColumn" text="Codice Ordine">
                <cellValueFactory>
                    <PropertyValueFactory property="codiceOrdine"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dataOrdineColumn" text="Data Ordine">
                <cellValueFactory>
                    <PropertyValueFactory property="dataOrdine"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="indirizzoDestinatarioColumn" text="Indirizzo Destinatario">
                <cellValueFactory>
                    <PropertyValueFactory property="indirizzoDestinatario"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="codiceScontoColumn" text="Codice Sconto">
                <cellValueFactory>
                    <PropertyValueFactory property="codiceSconto"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="percentualeScontoUtenteColumn" text="Percentuale Sconto Utente">
                <cellValueFactory>
                    <PropertyValueFactory property="percentualeScontoUtente"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="percentualeScontoPromoColumn" text="Percentuale Sconto Promo">
                <cellValueFactory>
                    <PropertyValueFactory property="percentualeScontoPromo"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="codiceProdottoColumn" text="Codice Prodotto">
                <cellValueFactory>
                    <PropertyValueFactory property="codiceProdotto"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="specificheColumn" text="Specifiche">
                <cellValueFactory>
                    <PropertyValueFactory property="specifiche"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="quantitaColumn" text="Quantita">
                <cellValueFactory>
                    <PropertyValueFactory property="quantita"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="numeroSerialeColumn" text="Numero Seriale">
                <cellValueFactory>
                    <PropertyValueFactory property="numeroSeriale"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="codiceLottoColumn" text="Codice Lotto">
                <cellValueFactory>
                    <PropertyValueFactory property="codiceLotto"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="codPaccoColumn" text="Cod Pacco">
                <cellValueFactory>
                    <PropertyValueFactory property="codPacco"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="codiceFiscaleColumn" text="Codice Fiscale">
                <cellValueFactory>
                    <PropertyValueFactory property="codiceFiscale"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nomeCompletoColumn" text="Nome Completo">
                <cellValueFactory>
                    <PropertyValueFactory property="nomeCompleto"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
