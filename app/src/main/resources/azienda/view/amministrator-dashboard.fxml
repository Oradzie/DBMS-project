<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" spacing="20.0">
    <VBox alignment="TOP_CENTER" spacing="10.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="DASHBOARD AMMINISTRATORE" styleClass="header-label" style="-fx-text-fill: #8B0000; -fx-font-weight: bold;"/>

        <GridPane hgap="10.0" vgap="10.0">
            <Button text="Inserimento Magazziniere" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button text="Visualizzazione Statistiche" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        </GridPane>
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="10.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="Chat Interattiva" styleClass="header-label" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="chatArea" prefHeight="400.0" prefWidth="300.0" editable="false"/>
        <HBox spacing="10.0">
            <TextField fx:id="chatInput" prefWidth="200.0" promptText="Scrivi un messaggio..."/>
            <Button text="Invia" onAction="#handleSendMessage"/>
        </HBox>
    </VBox>
</HBox>
